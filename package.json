{
	"name": "openui5-sample-app",
	"version": "0.5.0",
	"description": "Sample of an OpenUI5 app",
	"private": true,
	"engines": {
		"node": "^20.11.0 || >=22.0.0",
		"npm": ">= 8"
	},
	"scripts": {
		"start": "ui5 serve",
		"lint": "eslint webapp && ui5lint",
		"karma": "karma start",
		"karma-ci": "rimraf coverage && karma start karma-ci.conf.js",
		"watch": "npm run karma",
		"test": "npm run lint && npm run karma-ci",
		"build": "ui5 build -a --clean-dest",
		"build-self-contained": "ui5 build self-contained -a --clean-dest",
		"serve-dist": "ws --compress -d dist"
	},
	"devDependencies": {
		"@ui5/cli": "^4.0.0",
		"@ui5/linter": "^0.3.0",
		"@ui5/middleware-code-coverage": "^2.0.0",
		"eslint": "^8.57.0",
		"karma": "^6.4.3",
		"karma-chrome-launcher": "^3.2.0",
		"karma-coverage": "^2.2.1",
		"karma-ui5": "^4.0.1",
		"local-web-server": "^5.3.4",
		"rimraf": "^6.0.1"
	}
}
